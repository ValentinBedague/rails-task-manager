<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title"><%= @task.title %></h2>
      <p class="card-text text-muted"><%= @task.details %></p>

      <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" disabled <%= "checked" if @task.completed %>>
        <label class="form-check-label">
          Completed
        </label>
      </div>

      <%= link_to "Delete",
        task_path(@task),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
        class: "btn btn-danger"
      %>

      <%= link_to "Back to tasks", tasks_path, class: "btn btn-outline-secondary ms-2" %>
    </div>
  </div>
</div>
