<div class="container mt-5">
  <h1 class="mb-4">My Tasks</h1>

  <ul class="list-group mb-4">
    <% @tasks.each do |task| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="form-check">
          <input class="form-check-input me-2" type="checkbox" disabled <%= "checked" if task.completed %>>
          <%= link_to task.title, "/tasks/#{task.id}", class: "text-decoration-none" %>
        </div>
      </li>
    <% end %>
  </ul>

  <%= link_to "+ Add a Task", "/tasks/new", class: "btn btn-primary" %>
</div>
